<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageLogoDetalhes"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:adjustViewBounds="true"
        android:padding="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.12" />

    <TextView
        android:id="@+id/tvCEO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/hello_blank_fragment"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/imageLogoDetalhes"
        app:layout_constraintTop_toTopOf="@id/imageLogoDetalhes"
        app:layout_constraintBottom_toBottomOf="@id/imageLogoDetalhes" />

    <TextView
        android:id="@+id/Sector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/hello_blank_fragment"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/tvCEO"
        app:layout_constraintTop_toTopOf="@id/tvCEO"
        app:layout_constraintBottom_toBottomOf="@id/tvCEO" />

</androidx.constraintlayout.widget.ConstraintLayout>
